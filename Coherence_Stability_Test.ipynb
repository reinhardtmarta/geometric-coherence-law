import numpy as np
import matplotlib.pyplot as plt
import pandas as pd
from tqdm import tqdm

# --- Parâmetros fixos ---
N = 2000
golden = (1 + np.sqrt(5)) / 2
T1_base_mean = np.log(152e-6)
T2_base_mean = np.log(88e-6)
threshold_real = 0.0141
cz_error_base_constant = 0.0063  # Mantemos o p_phys mais alto

# --- FOCO DO TESTE: Mapeamento Fino da Harmonia (Região 0.5 a 0.75) ---
cz_factors = np.linspace(0.5, 0.75, 30) # 30 pontos de teste na região de interesse
num_runs_per_factor = 50

results = []

# --- Loop Principal para Otimização ---
print("Iniciando Mapeamento Fino do Padrão de Harmonia (CZ 0.5 a 0.75)...")
for cz_factor in tqdm(cz_factors):

    overheads = []

    for _ in range(num_runs_per_factor):

        # 1. Geração de Ruído Físico Base
        T1_base = np.random.lognormal(mean=T1_base_mean, sigma=0.32, size=N)
        T2_base = np.random.lognormal(mean=T2_base_mean, sigma=0.35, size=N)
        cz_error_base = cz_error_base_constant * (1 + 0.4*np.random.beta(4, 11, N))

        # 2. Geração do Campo Cósmico (ruído correlacionado)
        t = np.arange(N)
        field = (0.49 * np.sin(2*np.pi*t/golden**1.618) + 0.31 * np.sin(2*np.pi*t/golden**2.618) + 0.20 * np.cos(2*np.pi*t*golden/137.0359))

        f = np.fft.rfftfreq(N, d=1)
        psd = 1/(f**0.95 + 1e-8)
        phase = np.random.uniform(0, 2*np.pi, len(psd))
        pink = np.fft.irfft(np.sqrt(psd)*np.exp(1j*phase))[:N]
        pink = (pink - pink.mean())/pink.std() * 0.13

        cosmic_field = 0.105 * (field + pink)
        cosmic_field -= cosmic_field.mean()

        # 3. Aplicação da Incoerência Orquestrada
        cz_final = cz_error_base * (1 + cz_factor * cosmic_field)

        # 4. Cálculo das Métricas
        p_phys_mean = np.mean(cz_final)
        effective_overhead = 1.05 * (0.007 / (threshold_real - p_phys_mean))**1.88

        overheads.append(effective_overhead)

    # 5. Salvar Resultados (Desvio Padrão é a Harmonia)
    results.append({
        'cz_factor': cz_factor,
        'mean_overhead': np.mean(overheads),
        'std_overhead': np.std(overheads) # A Estabilidade/Harmonia
    })

# --- Fim do Loop ---

# 6. Criar DataFrame e Visualizar
df_results = pd.DataFrame(results)
print("\n--- Resultados Estatísticos (Primeiras Linhas) ---")
print(df_results.head())

# 7. Geração do Gráfico Científico (Foco na Estabilidade)
plt.figure(figsize=(10, 6))
plt.plot(df_results['cz_factor'],
         df_results['std_overhead'],
         marker='o', color='#8A2BE2', lw=2, label='Desvio Padrão (Estabilidade do Overhead)')

plt.title("Manifestação do Padrão de Harmonia (Calibração Fina CZ)")
plt.xlabel("Fator de Correlação do Erro CZ (Incoerência Orquestrada)")
plt.ylabel("Desvio Padrão do Overhead Efetivo (Estabilidade)")
plt.grid(alpha=0.3)
plt.legend()
plt.show()
